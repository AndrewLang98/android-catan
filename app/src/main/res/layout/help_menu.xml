<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menu_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="362dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <Button
        android:id="@+id/winning_Help_Button"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_background"
        app:layout_constraintStart_toStartOf="@+id/menu_background"
        app:layout_constraintTop_toTopOf="@+id/menu_background"
        tools:text="Winning" />

    <Button
        android:id="@+id/set_Up_Phase_Help_Button"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_background"
        app:layout_constraintStart_toStartOf="@+id/menu_background"
        app:layout_constraintTop_toTopOf="@+id/menu_background"
        tools:text="Set-Up Phase" />

    <Button
        android:id="@+id/building_Help_Button"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_background"
        app:layout_constraintStart_toStartOf="@+id/menu_background"
        app:layout_constraintTop_toTopOf="@+id/menu_background"
        tools:text="Building" />

    <Button
        android:id="@+id/development_Cards_Help_Button"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="197dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_background"
        app:layout_constraintStart_toStartOf="@+id/menu_background"
        app:layout_constraintTop_toTopOf="@+id/menu_background"
        tools:text="Development Cards" />

    <Button
        android:id="@+id/trading_Help_Button"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="246dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_background"
        app:layout_constraintStart_toStartOf="@+id/menu_background"
        app:layout_constraintTop_toTopOf="@+id/menu_background"
        tools:text="Trading" />

    <Button
        android:id="@+id/robber_Help_Button"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="295dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_background"
        app:layout_constraintStart_toStartOf="@+id/menu_background"
        app:layout_constraintTop_toTopOf="@+id/menu_background"
        tools:text="Robber" />
</android.support.constraint.ConstraintLayout>